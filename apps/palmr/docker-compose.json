{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/dynamic-compose.json",
  "services": [
    {
      "name": "palmr",
      "image": "kyantech/palmr:v3.2.5-beta",
      "internalPort": 5487,
      "isMain": true,
      "environment": [
        {
          "key": "DOWNLOAD_MAX_CONCURRENT",
          "value": "${DOWNLOAD_MAX_CONCURRENT}"
        },
        {
          "key": "SECURE_SITE",
          "value": "${SECURE_SITE}"
        },
        {
          "key": "DOWNLOAD_MIN_FILE_SIZE_GB",
          "value": "${ACTIVATE_MEMORY_MANAGEMENT}"
        },
        {
          "key": "DEFAULT_LANGUAGE",
          "value": "${DEFAULT_LANGUAGE}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/server",
          "containerPath": "/app/server"
        }
      ]
    }
  ]
}
