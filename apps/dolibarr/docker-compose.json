{
  "services": [
    {
      "name": "dolibarr",
      "image": "dolibarr/dolibarr:22.0.3",
      "isMain": true,
      "internalPort": 80,
      "environment": [
        {
          "key": "DOLI_INIT_DEMO",
          "value": "0"
        },
        {
          "key": "DOLI_DB_HOST",
          "value": "db-dolibarr"
        },
        {
          "key": "DOLI_DB_NAME",
          "value": "dolibarrdb"
        },
        {
          "key": "DOLI_DB_USER",
          "value": "doli"
        },
        {
          "key": "DOLI_DB_PASSWORD",
          "value": "dolibarrpwd"
        },
        {
          "key": "DOLI_ADMIN_LOGIN",
          "value": "${DOLIBARR_ADMIN_USER}"
        },
        {
          "key": "DOLI_ADMIN_PASSWORD",
          "value": "${DOLIBARR_ADMIN_PASSWORD}"
        },
        {
          "key": "DOLI_CRON",
          "value": "0"
        },
        {
          "key": "DOLI_CRON_KEY",
          "value": "securekey"
        },
        {
          "key": "DOLI_COMPANY_NAME",
          "value": "${DOLI_COMPANY_NAME}"
        },
        {
          "key": "WWW_USER_ID",
          "value": "1000"
        },
        {
          "key": "WWW_GROUP_ID",
          "value": "1000"
        }
      ],
      "dependsOn": ["db-dolibarr"],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/dolibarr/documents",
          "containerPath": "/var/www/documents"
        },
        {
          "hostPath": "${APP_DATA_DIR}/dolibarr/conf",
          "containerPath": "/var/www/html/conf"
        },
        {
          "hostPath": "${APP_DATA_DIR}/dolibarr/custom",
          "containerPath": "/var/www/html/custom"
        }
      ]
    },
    {
      "name": "db-dolibarr",
      "image": "mariadb:12",
      "environment": [
        {
          "key": "MYSQL_ROOT_PASSWORD",
          "value": "rootpass"
        },
        {
          "key": "MYSQL_DATABASE",
          "value": "dolibarrdb"
        },
        {
          "key": "MYSQL_USER",
          "value": "doli"
        },
        {
          "key": "MYSQL_PASSWORD",
          "value": "dolibarrpwd"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/db_data",
          "containerPath": "/var/lib/mysql"
        }
      ]
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/dynamic-compose.json"
}
