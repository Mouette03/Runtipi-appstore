{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/dynamic-compose.json",
  "services": [
    {
      "name": "galette",
      "image": "galette/galette:1.2.0.1",
      "internalPort": 80,
      "isMain": true,
      "environment": [
        {
          "key": "DB_TYPE",
          "value": "mysqli"
        },
        {
          "key": "DB_HOST",
          "value": "db-galette"
        },
        {
          "key": "DB_NAME",
          "value": "galettedb"
        },
        {
          "key": "DB_USER",
          "value": "galetteuser"
        },
        {
          "key": "DB_PASS",
          "value": "${GALETTE_MYSQL_PASSWORD}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/data",
          "containerPath": "/var/www/galette/data"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/var/www/galette/config"
        }
      ],
      "dependsOn": {
        "db-galette": {
          "condition": "service_started"
        }
      }
    },
    {
      "name": "db-galette",
      "image": "mariadb:12",
      "environment": [
        {
          "key": "MARIADB_ROOT_PASSWORD",
          "value": "rootpass"
        },
        {
          "key": "MYSQL_DATABASE",
          "value": "galettedb"
        },
        {
          "key": "MYSQL_USER",
          "value": "galetteuser"
        },
        {
          "key": "MYSQL_PASSWORD",
          "value": "${GALETTE_MYSQL_PASSWORD}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/galette_db",
          "containerPath": "/var/lib/mysql"
        }
      ]
    }
  ]
}

