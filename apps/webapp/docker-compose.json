{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/dynamic-compose.json",
  "services": [
    {
      "name": "webapp",
      "image": "ghcr.io/mouette03/webapp:v1.0.0",
      "internalPort": 80,
      "isMain": true,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/www",
          "containerPath": "/var/www/html"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/conf.d/zz-custom-settings.ini",
          "containerPath": "/usr/local/etc/php/conf.d/zz-custom-settings.ini"
        }
      ],
      "environment": [
        {
          "key": "APACHE_DOCUMENT_ROOT",
          "value": "/var/www/html"
        }
      ],
      "command": [
        "apache2-foreground"
      ],
      "dependsOn": {
        "db-webapp": {
          "condition": "service_started"
        }
      },
      "healthCheck": {
        "test": "curl --fail http://localhost || exit 1",
        "interval": "30s",
        "timeout": "10s",
        "retries": 3
      }
    },
    {
      "name": "db-webapp",
      "image": "mariadb:12",
      "environment": [
        {
          "key": "MYSQL_ROOT_PASSWORD",
          "value": "${MYSQL_ROOT_PASSWORD}"
        },
        {
          "key": "MYSQL_DATABASE",
          "value": "${MYSQL_DATABASE}"
        },
        {
          "key": "MYSQL_USER",
          "value": "${MYSQL_USER}"
        },
        {
          "key": "MYSQL_PASSWORD",
          "value": "${MYSQL_PASSWORD}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/database",
          "containerPath": "/var/lib/mysql"
        }
      ],
      "healthCheck": {
        "test": "mariadb-admin ping -h localhost -u root --password=${MYSQL_ROOT_PASSWORD}",
        "retries": 15,
        "interval": "10s",
        "timeout": "5s"
      }
    }
  ]
}
